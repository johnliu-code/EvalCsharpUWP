        <Button x:ConnectionId='6' Content="Ajouter Don" Height="52" Canvas.Left="96" Canvas.Top="250" Width="204" FontSize="20"                     />
        <TextBlock x:ConnectionId='7' x:Name="txbTotal" Height="32" Canvas.Left="67" TextWrapping="Wrap" Canvas.Top="378" Width="101" FontSize="16" TextAlignment="End" FontFamily="Arial" HorizontalAlignment="Left" VerticalAlignment="Center" Text="Total Dons:"/>
        <TextBox x:ConnectionId='8' x:Name="tboxDonTotal" Height="33" Canvas.Left="185" TextWrapping="Wrap" Text="10" Canvas.Top="371" Width="88" HorizontalAlignment="Left" VerticalAlignment="Center"/>
    </Canvas>
</Page>

