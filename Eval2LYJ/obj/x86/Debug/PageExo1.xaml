        <TextBlock x:ConnectionId='4' x:Name="txbDon" Height="32" Canvas.Left="91" TextWrapping="Wrap" Canvas.Top="149" Width="77" FontSize="16" TextAlignment="End" FontFamily="Arial" HorizontalAlignment="Left" VerticalAlignment="Center"><Run Text="Don"/><Run Text=":"/></TextBlock>
